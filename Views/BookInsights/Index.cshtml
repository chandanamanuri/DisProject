            font-weight: bold;
            color: #fff;
        }

        h2 {
            font-size: 2em;
            margin-bottom: 10px;
            letter-spacing: 3px;
            font-weight: bold;
            color: #fff;
            text-align: center;
        }

        canvas {
            max-width: 600px;
            margin: 0 auto;
            background-color: #384b38;
        }

        /* Navigation */
        nav {
            display: flex;
            justify-content: space-around;
            padding: 10px 0;
            background-color: #c89666;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            clear: both;
        }

            nav a {
                color: #384b38;
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
                font-weight: bold;
            }

                nav a:hover {
                    background-color: #c1a77a;
                    color: #fff;
                }

                nav a.active {
                    background-color: #384b38;
                    color: #fff;
                }

        /* Main content */
        main {
