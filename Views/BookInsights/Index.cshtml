        }

        /* Footer */
        footer {
            background-color: #384b38;
            color: #fff;
            padding: 5px;
            text-align: center;
            height: 50px;
        }

        /* Table styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
            border: 1px solid #384b38;
        }

        th {
            background-color: #f2f2f2;
            color: #384b38;
            text-align: left;
        }

      tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

      
        tbody tr:hover {
